<%- include('head.ejs') %>
<body>
  <div class="home container">
    <div class="home__intro-container">
      <img class="home__logo" src="/images/logo.svg" alt="logo" />
      <p class="home__tagline">making group travel cool!</p>
      <h2 class="home__title">Adventure Awaits, Student Style!</h1>
      <a class="btn home__btn" href="/trips">explore now</a>
    </div>
    <div class="home__trips-container">
      <ul class="trips-list">
        <% for (let trip of trips) { %> <% if (trip.image) { %>
        <li>
          <img src="/images/<%= trip.image %>" />
        </li>
        <% } else { %>
        <span>No image available</span>
        <% } %> <% } %>
      </ul>
    </div>
  </div>
</body>
