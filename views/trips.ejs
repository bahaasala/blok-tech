<div class="trips container">
  <h1>trips</h1>
  <div>
    <ul class="trips-list">
      <% for (let trip of trips) { %> <% if (trip.image) { %>
      <li>
        <a href="/trips/<%= trip.slug %>">
          <img src="/images/<%= trip.image %>" />
          <h3><%= trip.destination %></h3>
        </a>
      </li>
      <% } else { %>
      <span>No image available</span>
      <% } %> <% } %>
    </ul>
  </div>
