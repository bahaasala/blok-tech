<%- include('head.ejs') %>
<div class="trip container">
  <% if (trip) { %>
  <div
    class="trip__image-container"
    style="background-image: url('/images/<%= trip.image %>')"
  ></div>
  <div class="trip__details-container">
    <div class="title-container">
      <section>
        <h1 class="title"><%= trip.destination %></h1>
        <p class="trip__duration"><%= trip.duration %> day tour</p>
      </section>
      <div>
        <p class="price">,- <%= trip.price %></p>
        <p class="per-person">per person</p>
      </div>
    </div>
    <div class="inner-container">
      <section>
        <h4>description</h4>
        <p><%= trip.description %></p>
      </section>
      <section>
        <h4>duration</h4>
        <p><%= trip.duration %> days</p>
      </section>
    </div>
  </div>
  <% } %>
  <a href="/trips/<%= trip.slug %>/book" class="btn book-btn">Book now</a>
</div>
